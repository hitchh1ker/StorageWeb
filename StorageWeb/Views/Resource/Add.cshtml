@model StorageWeb.Repository.Resource.Models.Resource

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавить ресурс</h2>

<form method="post" asp-controller="Unit" asp-action="Add">
    <div style="margin-bottom: 16px;">
        <label for="Name">Наименование:</label><br />
        <input type="text" id="Name" name="Name" value="@Model?.Name" required style="padding: 8px; width: 300px;" />
        @if (ViewData.ModelState["Name"]?.Errors.Count > 0)
        {
            <div style="color:red;">@ViewData.ModelState["Name"].Errors[0].ErrorMessage</div>
        }
    </div>

    <button type="submit" class="btn">Сохранить</button>
    <a href="/resources/1" class="btn">Назад</a>
</form>

<style>
    .btn {
        display: inline-block;
        padding: 10px 20px;
        margin-top: 10px;
        margin-right: 10px;
        background-color: #b02a37;
        color: white;
        text-decoration: none;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        cursor: pointer;
    }

    .btn:hover {
        background-color: #821f2b;
    }
</style>
