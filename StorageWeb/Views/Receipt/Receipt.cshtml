@{

@using StorageWeb.Repository.Receipt.Models
@model IEnumerable<Receipt>

<h2>Ресурсы</h2>

<table border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Номер</th>
			<th>Дата</th>
			<th>Ресурс</th>
			<th>Единица</th>
			<th>Количество</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var receipt in Model)
        {
            <tr>
                <td>@receipt.Number</td>
				<td>@receipt.Date</td>
				<td>@receipt.ReceiptResource</td>
				<td>@receipt.ResourceUnit</td>
				<td>@receipt.Count</td>
            </tr>
        }
    </tbody>
</table>
}
